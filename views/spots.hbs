{{> header}}
<div class="container mt-3">
  <div class="row">
    {{#if category}}
      <h3 class="blue-grey-text text-darken-1 mb-2 ml-1" style="letter-spacing: 1px;">{{category.name}}</h3>
    {{else}}
      <h3 class="blue-grey-text text-darken-1 mb-2 ml-1" style="letter-spacing: 1px;">熱門討論</h3>
    {{/if}}
    {{#each spots}}
    <div class="col s12 m6 l4">
      <div class="card">
        <a href="/index/topSpots/{{this.id}}">
          <div class="card-image">
            <img src="{{this.image}}" width="300" height="220" style="border: 1px solid white; padding: 10px;">
          </div>
        </a>
        <div class="card-content center">
          <span class="card-title blue-grey-text text-darken-2" style="font-size: 1rem;">{{this.name}}</span>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
  <div class="center mt-2 mb-4">
    <a class="waves-effect waves-light btn mr-3" href="/index"><i class="material-icons left">reply</i>Back</a>
  </div>
</div>