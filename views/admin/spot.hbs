{{> header}}
<div class="container mb-5 mt-2">
  <h3 class="blue-grey-text text-darken-1">後台</h3>
  <h5 class="orange-text text-darken-4">{{spot.name}}</h5>
  <span>[{{spot.Category.name}}]</span>
  <div class="row mt-4">
    <div class="col s6">
      <img class="materialboxed" width="400" src="{{spot.image}}" style="border-radius: 10%;">
    </div>
    <div class="row">
      <div class="col s6">
        <ul>
          <li><i class="material-icons mb-1 mr-1">chat</i>{{spot.description}}</li>
          <li><i class="material-icons mb-1 mr-1">schedule</i>營業時間：{{spot.opening_hours}} ～ {{spot.closed_hours}}</li>
          <li><i class="material-icons mb-1 mr-1">phone</i>聯絡電話：{{spot.tel}}</li>
          <li><i class="material-icons mb-1 mr-1">location_on</i>詳細地址：<a href="#" target="_blank">{{spot.address}}</a></li>
          <li><i class="material-icons mb-1 mr-1">flag</i>留言數：0</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const elems = document.querySelectorAll('.materialboxed')
    const instances = M.Materialbox.init(elems)
  })
</script>