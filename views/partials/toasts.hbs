<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    {{#if error_msg}}
      M.toast({ html: '{{ error_msg }}', classes: 'red lighten-1 rounded' })
    {{/if}}

    {{#if success_msg}}
      M.toast({ html: '{{ success_msg }}', classes: 'yellow lighten-4 black-text rounded' })
    {{/if}}
  })
</script>